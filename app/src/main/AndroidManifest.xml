<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hrittik.miwokapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MiwokApp">

        <activity android:name=".PhrasesActivity"
            android:label="@string/Phrases">
        </activity>

        <activity android:name=".ColorActivity"
            android:label="@string/Colors">
        </activity>

        <activity android:name=".Family"
            android:label="@string/Family">
        </activity>

        <activity
            android:name=".NumbersActivity"
            android:label="@string/Numbers">
        </activity>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>